generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  senhaHash String
  role      String    // apenas "admin"
  ativo     Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  // Relacionamentos
  artigos        Artigo[]
  acervos        Acervo[]
  videosEspeciais VideoEspecial[]
}

model Artigo {
  id            Int       @id @default(autoincrement())
  titulo        String
  resumo        String?   @db.Text
  conteudo      String    @db.LongText
  imagem        String?   // URL da imagem principal
  video         String?   // URL do vídeo (opcional)
  dataPublicacao DateTime?
  ativo         Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  usuarioId     Int
  usuario       Usuario   @relation(fields: [usuarioId], references: [id])
}

model Acervo {
  id        Int      @id @default(autoincrement())
  titulo    String
  descricao String?  @db.Text
  imagem    String?  // URL da imagem
  video     String?  // URL do vídeo (opcional)
  ordem     Int?     // Para ordenação na galeria
  colecao   String?
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}

model VideoEspecial {
  id        Int      @id @default(autoincrement())
  titulo    String
  descricao String?  @db.Text
  tipo      String   // "intro", "banner", "capa"
  video     String   // URL do vídeo
  thumbnail String?  // URL da thumbnail
  ordem     Int?
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
}

model ContadorVisitante {
  id           Int      @id @default(autoincrement())
  contador     Int
  dataRegistro DateTime
  ipOrigem     String?
  userAgent    String?
  createdAt    DateTime @default(now())
}

model Configuracao {
  id        Int      @id @default(autoincrement())
  chave     String   @unique
  valor     String   @db.Text
  descricao String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
